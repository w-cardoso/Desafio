<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context="nf.iteris.com.br.iterisapp.ui.home_screen.HomeScreenActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/home_screen_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:gravity="center"
            android:text="@string/home_screen_txt_title"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/home_screen_txt_slogan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/home_screen_txt_slogan"
            android:textColor="@android:color/white"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/home_screen_btn_signUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_two"
            android:shadowColor="@android:color/black"
            android:text="@string/home_screen_btn_sign_up"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/home_screen_btn_signIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:shadowColor="@android:color/black"
            android:text="@string/home_screen_btn_sign_in"
            android:textColor="@android:color/white" />


    </LinearLayout>


</RelativeLayout>
