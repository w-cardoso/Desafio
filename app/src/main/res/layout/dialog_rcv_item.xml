<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_rcv_til_numbernf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_rcv_edt_numbernf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_rcv_edt_numbernf"
            android:inputType="number"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_rcv_til_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_rcv_edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_rcv_edt_description"
            android:inputType="textMultiLine"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_rcv_til_date_billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_rcv_edt_date_billing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/dialog_rcv_edt_date_billing"
            android:inputType="none"
            tools:text="11/20/2014" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_rcv_til_date_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_rcv_edt_date_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/dialog_rcv_edt_date_payment"
            android:inputType="none"
            tools:text="11/20/2014" />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/dialog_rcv_btn_cancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_two"
            android:text="@string/dialog_rcv_btn_cancelar"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/dialog_rcv_btn_antecipar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:text="@string/dialog_rcv_btn_antecipar"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


</LinearLayout>